<div id="<%= dom_id banana %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Weight:</strong>
    <%= banana.weight %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this banana", banana, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this banana', edit_banana_path(banana), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
